<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dieta_ananas"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerKalorycznosc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerCzasTrwania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerKalorycznosc"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonKup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerCzasTrwania"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Kup"/>

</RelativeLayout>
